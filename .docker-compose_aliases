alias dcps='docker-compose ps'
alias dcs='docker-compose stop'
alias dctest='docker-compose run web rails test;'
alias dcsetup='docker-compose run web rake setup;'
alias dcbash='docker-compose run web bash'
alias dcrestart='docker-compose up --scale web=0 web && docker-compose up -d --scale web=1 web'
alias dcrc='docker-compose exec web rails c'
alias dcl='docker-compose logs'
alias dclf='docker-compose logs -f'
alias dcbuild='docker-compose build'
alias dcup='docker-compose up'
alias dcupd='docker-compose up -d'
alias dcrecreate='dcbuild && dcup;'
alias dcd='docker-compose down'
alias dcspec='docker-compose run --rm web bin/rspec'
